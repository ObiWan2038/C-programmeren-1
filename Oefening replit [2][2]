/*
  Schrijf een programma dat de som, het verschil, het product en de deling van 2 reële getallen, die door de gebruiker worden ingegeven, berekent en de resultaten print.
*/
#include <stdio.h>

int main( void )
{
	double getal1 = 0;
	double getal2 = 0;
	int result = 0;

	printf( "Geef 2 reële getallen in: " );
	result = scanf( "%lf %lf", &getal1, &getal2 );

	printf( "%.1lf + %.1lf = %.1lf\n", getal1, getal2, /*som van getal 1 en getal 2*/ );
	printf( "%.1lf - %.1lf = %.1lf\n", getal1, getal2, /*verschil van getal 1 en getal 2*/ );
	printf( "%.1lf * %.1lf = %.1lf\n", getal1, getal2, /*product van getal 1 en getal 2*/ );
	printf( "%.1lf / %.1lf = %.1lf\n", getal1, getal2, /*deling van getal 1 en getal 2*/ );

	return 0;
}


/*
  Schrijf een programma dat de som, het verschil, het product en de deling van 2 reële getallen, die door de gebruiker worden ingegeven, berekent en de resultaten print.
*/
#include <stdio.h>

int main( void )
{
	double getal1 = 0;
	double getal2 = 0;
  
	int result = 0;

	printf( "Geef 2 reële getallen in: " );
	result = scanf( "%lf %lf", &getal1, &getal2 );

  float addition = getal1 + getal2;
  float substraction = getal1 - getal2;
  float multiplication = getal1 * getal2;
  float division = getal1 / getal2;

	printf( "%.1lf + %.1lf = %.1lf\n", getal1, getal2, addition/*som van getal 1 en getal 2*/ );
	printf( "%.1lf - %.1lf = %.1lf\n", getal1, getal2, substraction /*verschil van getal 1 en getal 2*/ );
	printf( "%.1lf * %.1lf = %.1lf\n", getal1, getal2, multiplication /*product van getal 1 en getal 2*/ );
	printf( "%.1lf / %.1lf = %.1lf\n", getal1, getal2, division/*deling van getal 1 en getal 2*/ );

	return 0;
}
